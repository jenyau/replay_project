<%= form_for [@train, carriage] do |form| %>
  <%= render 'common/errors', resource: carriage %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, [["Economy", "EconomyCarriage"], ['Coupe', 'CoupeCarriage'],
                            ["Sv", "SvCarriage"], ["Seats", "SeatsCarriage"]] %>
  </div>

  <div class="field" id="carriage_top_seats">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field" id="carriage_bottom_seats">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field" id="carriage_side_top_seats">
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats %>
  </div>

  <div class="field" id="carriage_side_bottom_seats">
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats %>
  </div>

  <div class="field" id="carriage_seat_places">
    <%= form.label :seat_places %>
    <%= form.text_field :seat_places %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_pack_tag 'search', 'data-turbolinks-track': 'reload' %>
