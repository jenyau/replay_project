<%= form_for(coupe_carriage) do |form| %>
  <%= render 'common/errors', resource: coupe_carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :train %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
