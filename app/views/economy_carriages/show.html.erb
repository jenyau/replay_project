<% else %>
  не указано
<% end %>
</p>

<p>
<strong>Bottom seats:</strong>
<% if @economy_carriage.bottom_seats.present? %>
  <%= @economy_carriage.bottom_seats %>
<% else %>
  не указано
<% end %>
</p>

<p>
<strong>Side top seats:</strong>
<% if @economy_carriage.side_top_seats.present? %>
  <%= @economy_carriage.side_top_seats %>
<% else %>
  не указано
<% end %>
</p>

<p>
<strong>Side bottom seats:</strong>
<% if @economy_carriage.side_bottom_seats.present? %>
  <%= @economy_carriage.side_bottom_seats %>
<% else %>
