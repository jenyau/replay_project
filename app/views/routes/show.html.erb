<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<strong>Поезда на маршруте</strong>
<% if @route.trains.empty? %>
  <li>Не указано</li>
<% else %>
  <% @route.trains.each do |train| %>
    <ul>
      <li><%= train.number %></li>
    </ul>
  <% end %>
<% end %>

<strong>Станции входят в маршрут:</strong>
<ul>
  <% if @route.railway_stations.empty? %>
    <li>Не указано</li>
  <% else %>
    <% @route.railway_stations.each do |station| %>
      <li><%= station.title %></li>
    <% end %>
  <% end %>
</ul>


<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
