<h1>Search</h1>

<%= form_tag search_path, method: :get do %>
  <div class="field">
    <%= select_tag :start_station_id, options_from_collection_for_select(RailwayStation.all, :id, :title)%>
  </div>

  <div class="field">
    <%= select_tag :end_station_id, options_from_collection_for_select(RailwayStation.all, :id, :title)%>
  </div>

  <div class="actions">
    <%= submit_tag %>
  </div>

<% end %>