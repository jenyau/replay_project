<h1>Search</h1>

<%= form_tag search_path, method: :get do %>
  <div class="col-md-2">
    <%= select_tag :start_station_id, options_from_collection_for_select(RailwayStation.all, :id, :title), class: 'form-control'%>
  </div>

  <div class="col-md-2">
    <%= select_tag :end_station_id, options_from_collection_for_select(RailwayStation.all, :id, :title), class: 'form-control'%>
  </div>

  <div class="col-md-2">
    <%= submit_tag "Найти", class: "btn btn-primary" %>
  </div>
<% end %>